<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextTitleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="TextBodySmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="TextBodyMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="Headline">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:lineHeight">36sp</item>
    </style>

    <style name="TextButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="TextButtonSmall">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">15sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="TextCaption">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">14sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/color_dark_gray</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/color_light_gray</item>
    </style>

</resources>
